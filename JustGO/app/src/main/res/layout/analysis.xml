<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.Analysis">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_screen2"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="            Personal Information\n"
            tools:layout_editor_absoluteX="120dp"
            android:textSize="30sp"
            android:textColor="@color/rice"
            />
        <!-- Gender Box -->
        <TextView
            android:id="@+id/analysisGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        
        <!-- Age Box -->
        <TextView
            android:id="@+id/analysisAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- Height Box -->
        <TextView
            android:id="@+id/analysisHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- Weight Box -->
        <TextView
            android:id="@+id/analysisWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- BMI Box -->
        <TextView
            android:id="@+id/analysisBMI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BMI Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- Health Status Box -->
        <TextView
            android:id="@+id/analysisHealth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\n            Today's Nutritio\n"
            tools:layout_editor_absoluteX="120dp"
            android:textSize="30sp"
            android:textColor="@color/rice"
            />
        <!-- Calorie Box -->
        <TextView
            android:id="@+id/analysisCalorie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calorie Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- Protein Box -->
        <TextView
            android:id="@+id/analysisProtein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="proteinBox"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

        <!-- Cholesterol Box -->
        <TextView
            android:id="@+id/analysisCholesterol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cholesterol Box"
            android:textSize="20sp"
            android:textColor="@color/white"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
