<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.food_usage.AddNewFood">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/splash_screen2"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/name_of_food"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/food_name2"
                />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="name of your food"
                android:textColorHint="@color/white"
                android:id="@+id/new_food_name"
                android:background="@drawable/input_text_1_dark"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/calorie_intake_layout"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:background="@drawable/calories" />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in KJ"
                android:textColorHint="@color/white"
                android:id="@+id/new_food_calories"
                android:background="@drawable/input_text_1_dark"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/fat_intake_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:background="@drawable/fat"
                />
        </LinearLayout>
        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
                android:textColorHint="@color/white"
                android:id="@+id/new_food_fat"
                android:background="@drawable/input_text_1_dark"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/protein_intake"
            >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:background="@drawable/protein"/>
        </LinearLayout>

            <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
                android:textColorHint="@color/white"
                android:id="@+id/new_food_protein"
                android:background="@drawable/input_text_1_dark"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/cholesterol_intake_layout"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="67dp"
                android:background="@drawable/cholesterol"
                />
        </LinearLayout>

        <EditText
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:hint="amount in gram"
            android:textColorHint="@color/white"
                android:id="@+id/new_food_cholesterol"
                android:background="@drawable/input_text_1_dark"
                />

        <Button
            android:id="@+id/submit_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/submit_add_data"
            />
        </LinearLayout>


</android.support.constraint.ConstraintLayout>
