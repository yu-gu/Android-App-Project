<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.moranlee.justgo.activity.activity.food_usage.SelectFoodOption">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/food_screen">


        <!--allow user to input amount and select unit-->

            <Button
                android:id="@+id/select_from_old_food"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/select_create_new_food"
                android:layout_marginTop="69dp"
                android:background="@drawable/select_food_icon" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_create_new_food"
            android:background="@drawable/creat_food_icon"
            android:layout_marginTop="37dp"
            android:layout_below="@+id/select_from_old_food"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_search_food_name"
            android:background="@drawable/search_food_icon"
            android:layout_marginTop="35dp"
            android:layout_below="@+id/select_create_new_food"
            android:layout_alignStart="@+id/select_create_new_food" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
